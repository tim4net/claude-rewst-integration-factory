{
  "name": "rewst-openapi",
  "description": "Create custom integrations for Rewst - validates, fixes, and builds OpenAPI specs",
  "version": "1.1.0",
  "author": {
    "name": "Tim",
    "url": "https://github.com/tim4net"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tim4net/claude-rewst-integration-factory"
  },
  "license": "MIT",
  "examples": [
    {
      "command": "/rewst-openapi:validate myspec.json",
      "description": "Check if a spec will work with Rewst"
    },
    {
      "command": "/rewst-openapi:fix myspec.json",
      "description": "Automatically repair common issues"
    },
    {
      "command": "/rewst-openapi:transform swagger.json rewst-api.json",
      "description": "Convert Swagger 2.0 or OpenAPI 3.1 to Rewst format"
    },
    {
      "command": "/rewst-openapi:create \"My API\"",
      "description": "Build a new spec from scratch with guided questions"
    },
    {
      "command": "/rewst-openapi:from-url https://docs.example.com/api",
      "description": "Generate a spec from API documentation"
    },
    {
      "command": "/rewst-openapi:subset large-api.json 450",
      "description": "Shrink a large spec to fit the size limit"
    },
    {
      "command": "/rewst-openapi:merge api-v1.json api-v2.json -o combined.json",
      "description": "Combine multiple specs into one"
    },
    {
      "command": "/rewst-openapi:document myspec.json",
      "description": "Generate human-readable documentation"
    }
  ]
}
